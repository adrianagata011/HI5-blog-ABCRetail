doctype html
html(lang="es")
    head
        title Bienvenidos a mi Blog Personal
        //- link(rel="stylesheet", href="/styles/styles.css") //-El estilo CSS rompe los demás estilos
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css")
        link(rel="icon", href="icono_pagina.ico", type="image/x-icon")
    body
        if !hideHeader
            header.p-3.text-bg-dark
                    nav.container
                        .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
                            a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none(href="/")
                                svg.bi.me-2(width="40", height="32", role="img", aria-label="Bootstrap")
                                    use(xlink:href="#bootstrap")
                            ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
                                li
                                    a.btn.btn-sm.btn-outline-primary.py-2.px-4.mx-2.text-blue(href="/blog/filter?category=Avisos") Avisos
                                li
                                    a.btn.btn-sm.btn-outline-primary.py-2.px-4.mx-2.text-blue(href="/blog/filter?category=Guias") Guías
                                li
                                    a.btn.btn-sm.btn-outline-primary.py-2.px-4.mx-2.text-blue(href="/blog/filter?category=General") General
                                li
                                    a.btn.btn-sm.btn-outline-primary.py-2.px-4.mx-2.text-blue(href="/blog/posts") Quitar filtros
                                form.d-flex(action="/blog/search", method="get")
                                    input.form-control.form-control-dark.text-bg-dark( name="q", type="text", placeholder="Buscar...", aria-label="Search" required)
                                    button.btn.btn-primary(type="submit") Buscar


        main.container.my-5
            block content
                if message
                    p(class=messageType) #{message}
        footer.py-3.my-4
